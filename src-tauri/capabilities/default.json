{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "os:default",
    "log:default",
    "fs:default",
    "fs:allow-app-read",
    {
      "identifier": "fs:allow-open",
      "allow": [{ "path": "**/*" }]
    }
  ]
}
