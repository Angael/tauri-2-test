{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "tauri-2-test",
  "version": "0.1.0",
  "identifier": "com.tauri-2-test.app",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "tauri-2-test",
        "width": 1100,
        "height": 700,
        "resizable": true,
        "acceptFirstMouse": true,
        "decorations": false
      }
    ],
    "security": {
      "csp": "default-src 'self' ipc: *.localhost; img-src 'self' asset: *.localhost; style-src 'self' 'unsafe-inline'",
      "assetProtocol": {
        "enable": true,
        "scope": ["**", "**/.local/share/**/*", "**/.cache/**/*"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": ["deb"],
    "category": "Utility",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
